                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <Border
                Grid.Row="2"
                Padding="0,0,0,15"
                VerticalAlignment="Bottom"
                Panel.ZIndex="99"
                Background="#292B2F"
                Cursor="Hand">
                <Grid>
                    <Button
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0">
                        <DockPanel HorizontalAlignment="Left">
                            <Border
                                Width="40"
                                Height="40"
                                CornerRadius="50">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/profile400x400.jpg" />
                                </Border.Background>
                            </Border>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#dce0e3"
                                    Text="Joker" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="Gray"
                                    Text="#0000" />
                            </StackPanel>
                        </DockPanel>
                    </Button>
                    <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                        <CheckBox
                            x:Name="checkBoxMic"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <CheckBox.Template>
                                <ControlTemplate TargetType="CheckBox">
                                    <Grid>
                                        <fa:ImageAwesome
                                            x:Name="checkMik"
                                            Width="13"
                                            Margin="10,0,5,0"
                                            Cursor="Hand"
                                            Foreground="#dce0e3"
                                            Icon="Microphone" />
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </ControlTemplate>
                            </CheckBox.Template>
                        </CheckBox>

                        <CheckBox
                            x:Name="checkBoxHead"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                            <CheckBox.Template>
                                <ControlTemplate TargetType="CheckBox">
                                    <Grid>
                                        <fa:ImageAwesome
                                            x:Name="checkMik"
                                            Width="16"
                                            Margin="10,0,5,0"
                                            Cursor="Hand"
                                            Foreground="#dce0e3"
                                            Icon="Headphones" />
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </ControlTemplate>
                            </CheckBox.Template>
                        </CheckBox>

                        <Button
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0">
                            <fa:ImageAwesome
                                Width="15"
                                Margin="10,0,5,0"
                                Cursor="Hand"
                                Foreground="#dce0e3"
                                Icon="Gear" />
                        </Button>


                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border
                    Padding="5"
                    BorderBrush="#404146"
                    BorderThickness="0,0,0,1">
                    <DockPanel>
                        <Border
                            Width="150"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            BorderBrush="#8E8F96"
                            BorderThickness="0,0,1,0">
                            <DockPanel>
                                <fa:ImageAwesome
                                    Width="15"
                                    Margin="10"
                                    Foreground="#DAE1DD"
                                    Icon="User" />
                                <TextBlock
                                    Margin="10"
                                    Foreground="#DAE1DD"
                                    Text="Arkadaşlar" />
                            </DockPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Margin="5,10" Content="Çevrimiçi">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                                Margin="10,5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton Margin="5,10" Content="Tümü">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                                Margin="10,5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton Margin="5,10" Content="Bekleyen">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                                Margin="10,5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton Margin="5,10" Content="Engellenen">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                                Margin="10,5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton
                                VerticalAlignment="Center"
                                Background="Green"
                                Content="ArkadaşEkle">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                                Margin="10,5"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </StackPanel>

                        <DockPanel Margin="0,0,20,0" HorizontalAlignment="Right">
                            <fa:ImageAwesome
                                Width="20"
                                Margin="10,0"
                                Icon="Comment"
                                Style="{StaticResource HeaderRightIcon}" />
