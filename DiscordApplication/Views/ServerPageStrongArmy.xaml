    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ServerPageStrongArmy"
    Height="auto"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#2f3137">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ScrollViewer Height="750" VerticalScrollBarVisibility="auto">
                <StackPanel>
                    <Border Grid.Row="0" CornerRadius="15,0,0,0">
                        <StackPanel>
                            <Border Height="165">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/200x200.jpg" />
                                </Border.Background>
                                <dxa:AccordionControl Background="Transparent">
                                    <DockPanel>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Background="white"
                                            CornerRadius="60">
                                            <fa:ImageAwesome
                                                Width="20"
                                                Foreground="Green"
                                                Icon="CheckCircle" />
                                        </Border>
                                        <dxa:AccordionItem
                                            Foreground="white"
                                            Header="Strong Army"
                                            IsExpanded="True" />
                                    </DockPanel>
                                </dxa:AccordionControl>
                            </Border>
                            <Border
                                Margin="8,10"
                                Padding="5"
                                BorderBrush="#3B3D44"
                                BorderThickness="0,0,0,1">
