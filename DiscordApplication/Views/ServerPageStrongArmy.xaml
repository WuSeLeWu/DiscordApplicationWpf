                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="MapSigns" />
                                        <TextBlock Margin="10" Text="Sunucu Rehberi" />
                                    </DockPanel>
                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="StickyNote" />
                                        <TextBlock Margin="10" Text="1 Etkinlik" />
                                    </DockPanel>
                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="Folder" />
                                        <TextBlock Margin="10" Text="Kanallar ve Roller" />
                                    </DockPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1">
                        <StackPanel>
                            <TreeView
                                Margin="0,10"
                                Background="Transparent"
                                BorderThickness="0">
                                <TreeViewItem Header="README.TXT" IsExpanded="True">
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Book" />
                                        <TreeViewItem Padding="0" Header="information" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Bullhorn" />
                                        <TreeViewItem Padding="0" Header="announcements" />
                                    </DockPanel>

                                </TreeViewItem>
                            </TreeView>

                            <TreeView
                                Margin="0,10"
                                Background="Transparent"
                                BorderThickness="0">
                                <TreeViewItem Header="README.TXT" IsExpanded="True">
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Bullhorn" />
                                        <TreeViewItem Padding="0" Header="event-announcements" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Hashtag" />
                                        <TreeViewItem Padding="0" Header="rythm-lounge" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Hashtag" />
                                        <TreeViewItem Padding="0" Header="product-guesses" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            VerticalAlignment="top"
                                            Foreground="#80848E"
                                            Icon="VolumeUp" />
                                        <TreeViewItem Padding="0" Header="Rythm Radio">
                                            <DockPanel Margin="-20,5">
                                                <fa:ImageAwesome
                                                    Width="20"
                                                    Foreground="#80848E"
                                                    Icon="QuestionCircle" />
                                                <TreeViewItem Padding="0" Header="EDM Radio" />
                                            </DockPanel>
                                        </TreeViewItem>
                                    </DockPanel>
                                </TreeViewItem>
                            </TreeView>

                            <TreeView
                                Margin="0,10"
                                Background="Transparent"
                                BorderThickness="0">
                                <TreeViewItem Header="HANGOUT HALL" IsExpanded="True">
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Hashtag" />
                                        <TreeViewItem Padding="0" Header="off-topic" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Hashtag" />
                                        <TreeViewItem Padding="0" Header="music-sharing" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="20"
                                            Foreground="#80848E"
                                            Icon="Hashtag" />
                                        <TreeViewItem Padding="0" Header="bot-commands" />
                                    </DockPanel>
                                    <DockPanel Margin="-20,5">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Foreground="#80848E"
                                            Icon="Lock" />
                                        <TreeViewItem Padding="0" Header="Vibes" />
                                    </DockPanel>
                                </TreeViewItem>
                            </TreeView>

                            <Border
                                Margin="8,10"
                                Padding="5"
                                BorderBrush="#3B3D44"
                                BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="MapSigns" />
                                        <TextBlock Margin="10" Text="Sunucu Rehberi" />
                                    </DockPanel>
                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="StickyNote" />
                                        <TextBlock Margin="10" Text="1 Etkinlik" />
                                    </DockPanel>
                                    <DockPanel Style="{StaticResource MenuDockPanel}">
                                        <fa:ImageAwesome
                                            Width="15"
                                            Margin="10"
                                            Foreground="#8E8F96"
                                            Icon="Folder" />
                                        <TextBlock Margin="10" Text="Kanallar ve Roller" />
                                    </DockPanel>
                                </StackPanel>
                            </Border>

